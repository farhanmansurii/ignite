{
  "name": "@farhanmansuri/ignite-svelte",
  "version": "1.0.5",
  "description": "Svelte action for Ignite \u2014 pre-warms serverless functions on hover intent",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/farhanmansurii/ignite.git",
    "directory": "packages/svelte"
  },
  "homepage": "https://github.com/farhanmansurii/ignite/tree/master/packages/svelte#readme",
  "bugs": {
    "url": "https://github.com/farhanmansurii/ignite/issues"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "vitest run"
  },
  "peerDependencies": {
    "svelte": ">=3"
  },
  "dependencies": {
    "@farhanmansuri/ignite-core": "workspace:*"
  },
  "keywords": [
    "svelte",
    "svelte-action",
    "serverless",
    "cold-start",
    "pre-warming",
    "performance",
    "hover-intent",
    "optimization"
  ],
  "devDependencies": {
    "happy-dom": "^14.0.0",
    "svelte": "^4.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}